			<if test="pid != null">`pid` = #{pid},</if>
			<if test="seq != null">`seq` = #{seq},</if>
			<if test="createTime != null">`create_time` = #{createTime},</if>
			<if test="isDel != null">`is_del` = #{isDel},</if>
		</set>
